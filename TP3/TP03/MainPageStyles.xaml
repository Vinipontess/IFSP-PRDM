<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Color x:Key="AzulPrincipal">#007BFF</Color>
    <Color x:Key="AzulEscuroDetalhe">#0056B3</Color>
    <Color x:Key="FundoAzulClaro">#E3F2FD</Color>
    <Color x:Key="TextoAzulMarinho">#0B2F4C</Color>
    <Color x:Key="PlaceholderCinzaAzul">#90A4AE</Color>

    <Style x:Key="EntryStyle"
           TargetType="Entry">
        <Setter Property="Margin"
                Value="0,12,0,0"/>
        <Setter Property="PlaceholderColor"
                Value="{StaticResource PlaceholderCinzaAzul}"/>
        <Setter Property="TextColor"
                Value="{StaticResource TextoAzulMarinho}"/>
        <Setter Property="BackgroundColor"
                Value="{StaticResource FundoAzulClaro}"/>
        <Setter Property="HeightRequest"
                Value="48"/>
    </Style>

    <Style x:Key="ButtonStyle"
           TargetType="Button">
        <Setter Property="Margin"
                Value="0,25,0,0"/>
        <Setter Property="BackgroundColor"
                Value="{StaticResource AzulPrincipal}"/>
        <Setter Property="TextColor"
                Value="White"/>
        <Setter Property="CornerRadius"
                Value="8"/>
        <Setter Property="HeightRequest"
                Value="50"/>
    </Style>
</ResourceDictionary>